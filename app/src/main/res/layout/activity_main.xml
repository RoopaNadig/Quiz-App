<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.quizapp.MainActivity">

    <TextView
        style="@style/TextStyle"
        android:text="1. What is the National Bird of India?" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        style="@style/RadioGroupStyle">

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Crow"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Sparrow"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Peacock"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Pigeon"/>

    </RadioGroup>

    <TextView
        style="@style/TextStyle"
        android:text="2. What is the National Animmal of India?" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        style="@style/RadioGroupStyle">

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Tiger"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Lion"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Elephant"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Hippo"/>
    </RadioGroup>

    <TextView
        style="@style/TextStyle"
        android:text="3. What is the National Flower of India?" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        style="@style/RadioGroupStyle">
        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Rose"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Lotus"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Carnation"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Sunflower"/>
    </RadioGroup>

    <TextView
        style="@style/TextStyle"
        android:text="4. What is the National Game of India?" />

    <RadioGroup
        android:id="@+id/radioGroup4"
        style="@style/RadioGroupStyle">
        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Cricket"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Carrom"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Hockey"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Tennis"/>

    </RadioGroup>

    <TextView
        style="@style/TextStyle"
        android:text="5. What is the National Fruit of India?" />

    <RadioGroup
        android:id="@+id/radioGroup5"
        style="@style/RadioGroupStyle">
        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Mango"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Apple"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Tomato"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="Papaya"/>
    </RadioGroup>

    <Button
        android:id="@+id/submit_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Answers"
        android:layout_gravity="center"/>
</LinearLayout>
</ScrollView>